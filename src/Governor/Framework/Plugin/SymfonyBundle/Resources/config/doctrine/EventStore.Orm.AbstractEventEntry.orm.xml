<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" 
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Governor\Framework\EventStore\Orm\AbstractEventEntry">     
        <id name="type" type="string" column="type"/>
        <id name="aggregateIdentifier" type="string" column="aggregate_id"/>
        <id name="scn" type="integer" column="scn"/>
        
        <field name="eventIdentifier" type="string" column="event_id"/>
        <field name="timestamp" type="datetime" column="created_at"/>
        <field name="payloadType" type="string" column="payload_type"/>
        <field name="payloadRevision" type="string" column="payload_revision"/>
        <field name="payload" type="text" column="payload"/>
        <field name="metaData" type="text" column="metadata"/>
    </mapped-superclass>        
</doctrine-mapping>